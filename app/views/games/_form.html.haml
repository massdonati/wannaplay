- if @game.errors.any?
  .row-fluid
    #alert.alert.alert-block
      %a#close.close{"data-dismiss" => "alert"} Ã—
      %h4.alert-heading Worning!
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
= simple_form_for @game, :html => { :class => 'well' } do |f|

  = f.input :sport, :input_html => { :class => 'span4', :placeholder => "Write the sport you wanna play"}
  = f.input :date, :input_html => { :class => "span4", :size => "16", :"data-behaviour" => "datepicker", :type => "text", :placeholder => "Clicca per visualizzare il calendario"}
  = f.input :location, :input_html => { :class => 'span4', :placeholder => "Write the location"}
  = f.input :allowed_number_of_players, :input_html => {:class => "span1"}
  = f.input :price, :wrapper => :append do
    = f.input_field :price, :class => "span2", :id => "appendedInput", :type => "text"
    %span.add-on .00
  / .download-info
  = f.button :submit, :class => "btn btn-success", :value => 'Aggiungi Partita'